<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/login.css">
<h1 style="color:	rgba(0,128,128,0.8); font-weight:600">Login</h1>
<div class="main">
    <form action="/login" method="post" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" style="color:	rgb(0,128,128); font-weight:600; font-size:large" for="username">Username</label>
            <input class="form-control" type="username" id="username" name="username" placeholder="Username" required>
            <div class="valid-feedback">
                looks good
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" style="color:	rgb(0,128,128); font-weight:600; font-size:large" for="password">Password</label>
            <input class="form-control" type="password" id="passwordf" name="password" placeholder="password" required>
            <div class="valid-feedback">
                looks good
            </div>
    
        </div> 
        <div>
            <button style="height:50px; width:120px; font-size:large"  class="btn btn-success">Login</button>
        </div>

</div>




</form>
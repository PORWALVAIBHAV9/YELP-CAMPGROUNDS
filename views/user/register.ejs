<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/login.css">
<h1 style="color:	rgba(0,128,128,0.8); font-weight:600">Register</h1>
<div class="main">
    <form action="/register" method="post" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" style="color:	rgba(0,128,128,0.8); font-weight:600" for="username">Username</label>
            <input class="form-control" type="username" id="username" name="username" placeholder="Username" required>
            <div class="valid-feedback">
                looks good
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" style="color:	rgba(0,128,128,0.8); font-weight:600" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" placeholder="Email" required>
            <div class="valid-feedback">
                looks good
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" style="color:	rgba(0,128,128,0.8); font-weight:600" for="password">Password</label>
            <input class="form-control" type="password" id="passwordf" name="password" placeholder="password" required>
            <div class="valid-feedback">
                looks good
            </div>
    
        </div> 
        <div>
            <button style="margin-top: 10px;" class="btn btn-success">Register</button>
        </div>
    </form>
</div>
